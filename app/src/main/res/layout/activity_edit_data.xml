<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <!--<ScrollView-->
    <!--android:id="@+id/activity_main"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--&gt;-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white_gray"
        >


        <LinearLayout
            android:id="@+id/L1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="精选照片"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    />
                <ImageView
                    android:id="@+id/im_chooes"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/angle"
                    android:textSize="19sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/L2"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/L1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="头像"
                    android:textSize="19sp"
                    android:textColor="@color/colorOnBackground"
                    android:drawableRight="@drawable/angle"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_qianming"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="签名"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/colorOnBackground"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/angle"
                    android:textSize="19sp"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/L3"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/L2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="2dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="封面"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/angle"
                    android:textSize="19sp"
                    android:id="@+id/textView5"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/angle"
                    android:textSize="19sp"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/L4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:layout_below="@id/L3"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="昵称"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    />
                <TextView
                    android:id="@+id/tv_nicheng"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/colorOnBackground"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/angle"
                    android:textSize="19sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="性别"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    />
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    android:layout_marginLeft="70dp"
                    />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/L5"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/L4"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="2dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="生日"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    />
                <TextView
                    android:id="@+id/tv_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/colorOnBackground"
                    android:hint="请填写出生日期"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/angle"
                    android:textSize="19sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_teach"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/L5"
            android:gravity="center"
            android:text="教育经历"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>


        <LinearLayout
            android:id="@+id/L6"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:layout_below="@id/tv_teach"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_school1"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                 </android.support.v7.widget.RecyclerView>
                <TextView
                    android:layout_weight="30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/angle"
                    android:textSize="19sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/L7"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/L6"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="添加学校"
                android:textSize="19sp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/L8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:layout_below="@id/L7"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="职业"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    />
                <TextView
                    android:id="@+id/tv_zhiye"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/colorOnBackground"
                    android:hint="请填写您的职业"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/angle"
                    android:textSize="19sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="公司"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    />
                <EditText
                    android:id="@+id/et_gongsi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/colorOnBackground"
                    android:hint="填写公司，发现同事"
                    />


            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/L9"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/L8"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="2dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="所在地"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    android:id="@+id/textView6" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/colorOnBackground"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/angle"
                    android:textSize="19sp"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/L10"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/L9"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="2dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="家乡"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    />
                <TextView
                    android:id="@+id/tv_homeAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/colorOnBackground"
                    android:hint="选择家乡，发现老乡"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/angle"
                    android:textSize="19sp"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/L11"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/L10"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="2dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="邮箱"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    />
                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/colorOnBackground"
                    android:hint="你的邮箱"
                    />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/L12"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:layout_below="@id/L11"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="个人说明"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorOnBackground"
                    />
                <TextView
                    android:id="@+id/tv_descript"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="32dp"
                    android:textColor="@color/colorOnBackground"
                    android:hint="介绍一下自己吧o(*￣▽￣*)ブ"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/angle"
                    android:textSize="19sp"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>