<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/seekPersonNum"
                android:hint="@string/seekPersonNumHint"
                android:background="?mColorSurface"
                android:drawableStart="@drawable/ic_search_24"
                android:drawableTint="?android:textColorHint"
                android:drawablePadding="8dp"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:layout_marginTop="@dimen/optionGroupMargin"
                android:layout_marginBottom="@dimen/optionGroupMargin"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/AppTheme.SimpleOption"
                android:text="添加手机联系人"
                android:drawableStart="@drawable/ic_call_24"/>

            <TextView
                style="@style/AppTheme.SimpleOption"
                android:text="扫一扫添加好友"
                android:drawableStart="@drawable/ic_menu_24"/>

            <TextView
                style="@style/AppTheme.SimpleOption"
                android:text="面对面发起群聊"
                android:drawableStart="@drawable/ic_menu_24"/>

            <TextView
                style="@style/AppTheme.SimpleOption"
                android:text="按条件查找陌生人"
                android:drawableStart="@drawable/ic_search_24"/>

            <TextView
                style="@style/AppTheme.SimpleOption"
                android:text="查看附近的人"
                android:layout_marginBottom="@dimen/optionGroupMargin"
                android:drawableStart="@drawable/ic_menu_24"/>
        </LinearLayout>
    </ScrollView>
</layout>
