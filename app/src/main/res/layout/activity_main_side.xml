<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_side"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aclass.android.qq.MainSideActivity"
    android:background="@color/color_white"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
                android:id="@+id/recordView"
                android:drawableStart="@drawable/main_side_record"
                android:drawableTint="#000000"
                android:text="打卡"
                style="@style/AppTheme.MainSideOption"
                />

        <LinearLayout
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recordView">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/main_side_icon"
               />
        </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/recordView"
            android:layout_toEndOf="@id/icon"
            android:text="Mizar"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:drawableTint="#000000"
            android:drawableEnd="@drawable/main_side_ico"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@id/icon"
            android:src="@drawable/main_side_moon"
            android:layout_marginLeft="10dp"
           />

        <TextView
            android:id="@+id/myMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/level"
            android:layout_toEndOf="@id/icon"
            android:drawableStart="@drawable/main_side_edit"
            android:text="编辑签名，展示我的独特态度。"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:background="@color/color_white"
        android:layout_marginTop="20dp"

        >
        <LinearLayout
            android:id="@+id/detailMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/vipText"
                style="@style/AppTheme.SimpleOption"
                android:text="了解会员特权 "
                android:drawableStart="@drawable/main_side_vip"/>

            <TextView
                android:id="@+id/moneyText"
                style="@style/AppTheme.SimpleOption"
                android:text="我的钱包 "
                android:drawableStart="@drawable/main_side_money"/>

            <TextView
                android:id="@+id/decorationText"
                style="@style/AppTheme.SimpleOption"
                android:text="我的个性装扮 "
                android:drawableStart="@drawable/main_side_decoration"/>

            <TextView
                android:id="@+id/collectText"
                style="@style/AppTheme.SimpleOption"
                android:text="我的收藏 "
                android:drawableStart="@drawable/main_side_collect"/>

            <TextView
                android:id="@+id/pictureText"
                style="@style/AppTheme.SimpleOption"
                android:text="我的相册 "
                android:drawableStart="@drawable/main_side_pictures"/>

           <TextView
               android:id="@+id/fileText"
               android:text="我的文件"
               style="@style/AppTheme.SimpleOption"
               android:drawableStart="@drawable/main_side_file" />

            <TextView
                android:id="@+id/noDateView"
                android:drawableStart="@drawable/main_side_no"
                android:text="免流量特权"
                style="@style/AppTheme.SimpleOption"/>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/install"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/menu"
        android:gravity="bottom"
        android:layout_marginLeft="18dp"
        >
        <ImageView
            android:id="@+id/installLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_side_install"
            />
        <TextView
            android:id="@+id/installText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/installLogo"
            android:layout_marginTop="5dp"
            android:text="设置"
            android:textColor="#000000"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/model"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_below="@id/menu"
        android:layout_marginLeft="100dp"

        >

        <ImageView
            android:id="@+id/modelLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_side_model" />

        <TextView
            android:id="@+id/modelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/modelLogo"
            android:layout_marginTop="5dp"
            android:text="夜间"
            android:textColor="#000000"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_below="@id/menu"
        android:layout_marginLeft="175dp"

        >
        <ImageView
            android:id="@+id/temperatureLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_side_temperature"
            />
        <ImageView
            android:id="@+id/temperature1Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_side_temperature1"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/temperatureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperatureLogo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:text="渝北"
            android:textColor="#000000"
            />
    </RelativeLayout>



</RelativeLayout>
