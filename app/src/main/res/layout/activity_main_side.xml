<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_side"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aclass.android.qq.MainSideActivity"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:id="@+id/recordLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/recordView"
               android:drawableStart="@drawable/main_side_record"
                android:text="打卡"
                style="@style/AppTheme.MainSideOption"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/message"
        android:background="@color/color_white"
        >
        <LinearLayout
            android:id="@+id/detailMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/vipText"
                style="@style/AppTheme.SimpleOption"
                android:text="了解会员特权 "
                android:drawableStart="@drawable/main_side_vip"/>

            <TextView
                android:id="@+id/moneyText"
                style="@style/AppTheme.SimpleOption"
                android:text="我的钱包 "
                android:drawableStart="@drawable/main_side_money"/>

            <TextView
                android:id="@+id/decorationText"
                style="@style/AppTheme.SimpleOption"
                android:text="我的个性装扮 "
                android:drawableStart="@drawable/main_side_decoration"/>

            <TextView
                android:id="@+id/collectText"
                style="@style/AppTheme.SimpleOption"
                android:text="我的收藏 "
                android:drawableStart="@drawable/main_side_collect"/>

            <TextView
                android:id="@+id/pictureText"
                style="@style/AppTheme.SimpleOption"
                android:text="我的相册 "
                android:drawableStart="@drawable/main_side_pictures"/>

           <TextView
               android:id="@+id/fileText"
               android:text="我的文件"
               style="@style/AppTheme.SimpleOption"
               android:drawableStart="@drawable/main_side_file" />

            <TextView
                android:id="@+id/noDateView"
                android:drawableStart="@drawable/main_side_no"
                android:text="免流量特权"
                style="@style/AppTheme.SimpleOption"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu"
        android:background="#0099FF"
        >
    </RelativeLayout>


</RelativeLayout>
