<resources>

    <!-- Base application theme. todo 修改 parent 为含 NoActionBar 的 style/theme -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mColorAccent">@color/colorAccent</item>
        <item name="mColorBackground">@color/colorBackground</item>
        <item name="mColorOnBackground">@color/colorOnBackground</item>
        <item name="mColorSurface">@color/colorSurface</item>
        <item name="mColorOnSurface">@color/colorOnSurface</item>
        <item name="mColorDivider">@color/colorDivider</item>
        <item name="mColorOptionGo">@color/colorOptionGo</item>
        <item name="mColorPreview">@color/colorPreview</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.MainMorePop" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupMenuStyle">@style/AppTheme.MainMorePopMenu</item>
    </style>

    <style name="AppTheme.MainMorePopMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/main_more_background</item>
    </style>

    <!-- 带返回按键和白色图标颜色的工具栏 -->
    <style name="AppTheme.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/toolbar_bg_change_color</item>
        <item name="navigationIcon">@drawable/ic_keyboard_arrow_left_24</item>
        <item name="navigationIconTint">@android:color/white</item>
        <item name="menuIconTint">@android:color/white</item>
    </style>

    <!-- 白色的工具栏标题 -->
    <style name="AppTheme.ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

<!--    以单个 View(Switch, TextView) 实现的“选项”控件-->
    <style name="AppTheme.SimpleOption">
        <item name="android:textColor">?mColorOnSurface</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">@dimen/optionPaddingVertical</item>
        <item name="android:paddingBottom">@dimen/optionPaddingVertical</item>
        <item name="android:paddingStart">@dimen/optionPaddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/optionPaddingHorizontal</item>
        <item name="android:drawableEnd">@drawable/ic_keyboard_arrow_right_24</item>
        <item name="android:drawablePadding">13dp</item>
        <item name="android:drawableTint">?mColorOptionGo</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">?mColorSurface</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--    以单个 TextView 实现的“选项”控件（侧栏）-->
    <style name="AppTheme.MainSideSimpleOption">
        <item name="android:textColor">?mColorOnSurface</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:drawableEnd">@drawable/ic_keyboard_arrow_right_24</item>
        <item name="android:drawablePadding">13dp</item>
        <item name="android:drawableTint">?mColorOptionGo</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">?mColorSurface</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--“选项组”-->
    <style name="AppTheme.SimpleOptionGroup">
        <item name="android:orientation">vertical</item>
        <item name="android:divider">@drawable/options_divider</item>
        <item name="android:showDividers">middle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--“打卡栏”-->
    <style name="AppTheme.MainSideOption">
        <item name="android:textColor">?mColorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--“返回栏”-->
    <style name="AppTheme.MyDataActivitySimpleOption">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:drawableStart">@drawable/ic_return</item>
        <item name="android:drawableTint">#FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>


    <!--“新朋友的头像”-->
    <style name="AppTheme.NewFriendsIconOption">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:src">@drawable/main_side_icon</item>
    </style>

    <!--“新朋友名字”-->
    <style name="AppTheme.NewFriendsNameOption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:drawableTint">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">90dp</item>
    </style>

    <!--“新朋友的性别”-->
    <style name="AppTheme.NewFriendsSexOption">
        <item name="android:src">@drawable/ic_boy</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">90dp</item>
        <item name="android:layout_marginTop">35dp</item>
    </style>

    <!--“新朋友的年龄”-->
    <style name="AppTheme.NewFriendsAgeOption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorOptionGo</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">120dp</item>
        <item name="android:layout_marginTop">33dp</item>
    </style>

    <!--“新朋友的验证消息”-->
    <style name="AppTheme.NewFriendsMessageOption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorOptionGo</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">145dp</item>
        <item name="android:layout_marginTop">33dp</item>
    </style>

    <!--“QQ来源”-->
    <style name="AppTheme.NewFriendsQQFromOption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorOptionGo</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">90dp</item>
        <item name="android:layout_marginTop">65dp</item>
    </style>

    <!--“新朋友的来源”-->
    <style name="AppTheme.NewFriendsFromOption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorOptionGo</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">173dp</item>
        <item name="android:layout_marginTop">65dp</item>

    </style>

    <!--“所加好友名字”-->
    <style name="AppTheme.AddNameOption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:drawableTint">#000000</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginStart">90dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!--“已同意文本”-->
    <style name="AppTheme.AgreedAndCheckText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/colorOptionGo</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--“发送验证请求”-->
    <style name="AppTheme.RequestCheckingOption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorOptionGo</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">90dp</item>
        <item name="android:layout_marginTop">55dp</item>
    </style>



    <!--“待同意按钮”-->
    <style name="AppTheme.WaitingAgreeBtn">
        <item name="android:drawableEnd">@drawable/data_my_button</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">25dp</item>
    </style>

    <!--“待同意好友列表”-->
    <style name="AppTheme.WaitingAgree">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/wait_agree_yellow</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
    </style>

    <!--“已同意好友和待验证通过列表列表”-->
    <style name="AppTheme.Others">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
    </style>

    <!--“已同意好友和待验证通过列表列表”-->
    <style name="AppTheme.SearchMore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
      <item name="android:src">@drawable/ic_keyboard_arrow_right_24</item>
    </style>


</resources>
