        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
     


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_qqlauncher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".AddFriendActivity" />
        <activity android:name=".NewFriendActivity" />
        <activity android:name=".ContactChatSettingsActivity" />
        <activity android:name=".GroupChatSettingsActivity" />
        <activity android:name=".MessageWindowActivity" />
        <activity android:name=".SettingWindowActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditDataActivity" />
        <activity android:name=".VideoWindowActivity"></activity>
        <activity android:name=".VideoTest">

        </activity>
